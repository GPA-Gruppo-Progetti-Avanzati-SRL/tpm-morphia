    { "name": "firstName", "type": "string", "tags": [ "json", "fn", "bson", "fn" ], "queryable": true },
    { "name": "lastName", "type": "string", "tags": [ "json", "ln", "bson", "ln" ], "queryable": true },
    { "name": "age", "type": "int", "queryable": true },
    {
      "name": "address", "type": "struct",
